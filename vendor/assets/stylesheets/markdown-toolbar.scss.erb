.markdown-toolbar-panel {
  height:20px;
  border:1px solid #aaa;
  background: #fafafa;
}
.markdown-toolbar-panel {
  margin-bottom:0;
  border-bottom:0;  
}
.markdown-upload-panel {
  margin-top:0;
  border-top:0;
  padding:5px;
}

.mdt_buttons {
  width:auto;
  display:inline-block;
  margin-top:2px;
  margin-bottom:2px;  
}

.mdt_button {
  width:16px;
  height:16px;
  cursor:pointer;
  display:inline-block;
  float:left;
  margin-left:2px;
}
<% %w{ bold italic strike list_bullets list_numbers heading_2 heading_3 link image}.each_with_index do |button, index| %>
.mdt_button_<%= button %> {
  background: url( '<%= asset_path "/images/text_#{button}.png" %>' );
  &:active{
    background-position: 1px 1px;
  }
}
<% end %>